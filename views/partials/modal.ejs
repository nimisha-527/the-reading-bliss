<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-custom-fill-primary py-2 px-4" data-bs-toggle="modal" data-bs-target="#ModalPopup" data-bs-whatever="<%= foundBook.title %>"><%= buttonName  %></button>

<!-- Modal -->
<div class="modal fade" id="ModalPopup" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/readingBliss/<%= foundBook.id  %>/recommend/<%= currentUser._id  %>" method="POST">
          <div class="mb-3">
            <label for="image" class="col-form-label">Image Link:</label>
            <input type="text" class="form-control" id="image" name="image" value="<%= foundBook.images  %>">
          </div>
          <div class="mb-3">
            <label for="description-text" class="col-form-label">Description:</label>
            <textarea class="form-control" id="description-text" name="description" value="<%= foundBook.description  %>"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary" value="Submit">Proceed</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
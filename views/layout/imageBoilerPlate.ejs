<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/scss/style.css" />
    <link rel="stylesheet" type="text/css" href="/scss/scope.css" />
    <title><%=bookJson.webTitle  %></title>
  </head>

  <body class="d-flex flex-column">
    <%#=JSON.stringify(getNavLinkColor)%>
      <% if(currentUser) { %>
        <%- include("../partials/navbarLoggedIn", {navLoggedIn: bookJson.navbarLoggedIn, isNavTransparent: isNavTransparent, getNavLinkColor, getNavToggleColor}) %>
      <% } else { %>
        <%- include("../partials/navbar", {navLoggedOut: bookJson.navbarLoggedOut, isNavTransparent: isNavTransparent, getNavLinkColor, getNavToggleColor}) %>
      <% } %>
    <!--  When called anywhere inside a template, requests that the output of the current template be passed to the given view as the body local.  -->
    <main>
      <%- include("../partials/flash", {
        flashIcons: JSON.stringify(icons.flashIcons.symbols) , 
        successIcons: JSON.stringify(icons.flashIcons.successIcon), 
        errorIcons: JSON.stringify(icons.flashIcons.errorIcon), 
        infoIcons: JSON.stringify(icons.flashIcons.infoIcon),
        clickHereLabel: JSON.stringify(icons.flashIcons.clickHereText)
      })%>
      <%- body %>
    </main>
    <%- include("../partials/footer", {footerLabel: bookJson.footer}) %>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
    <script src="/js/formValidation.js"></script>
    <script src="/js/modalInput.js"></script>
    <script src="/js/navActive.js"></script>
    <script src="/js/animation.js"></script>
    <script src="/js/textTruncate.js"></script>
  </body>
</html>


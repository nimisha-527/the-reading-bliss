<% layout('layout/boilerplate') %>
<% if(!bookLibrary.length) { %> 
  <div class="mt-5">
    You do not have any books yet. To add a book click the Icon &nbsp;
    <a href="/readingbliss/newBook" data-bs-toggle="tooltip" data-bs-placement="top" title="Add Book">
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-book-half" viewBox="0 0 16 16">
        <path d="M8.5 2.687c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783"/>
      </svg>
    </a>
  </div>
<% } else {%>
<div>
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% for(let library of bookLibrary) { %> 
    <% if(currentUser && library?.owner && library?.owner?.equals(currentUser._id)) { %>
    <div class="col">
      <div class="card h-100">
        <img
          src="<%= library.images[0]?.url%>"
          class="card-img-top"
          alt="<%=library.title%>"
        />
        <div class="card-body" style="text-align: center">
          <h5 class="card-title"><%=library.title%></h5>
          <p class="card-text"><%=library.description%></p>
        </div>
        <div class="card-footer" style="text-align: center">
          <a
            class="btn btn-primary btn-custom-fill-primary py-2 px-4"
            href="/readingBliss/<%=library.id%>"
          >
            Details
          </a>
        </div>
      </div>
    </div>
    <% } %>
    <% } %>
  </div>
</div>
<% } %>

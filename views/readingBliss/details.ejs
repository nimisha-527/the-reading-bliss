<% layout('layout/boilerplate') %>

<div class="row">
    <div class="col-6 pb-5">
        <div class="card h-100">
            <img src="<%=foundBook.images%>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=foundBook.title%></h5>
              <p class="card-text"><%=foundBook.description%></p>
              <p class="card-text text-muted"><%=bookJson.details.authorText.replace("#author#", foundBook.author)%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%=bookJson.details.priceValue.replace("#price#", foundBook.price)%></li>
            </ul>
            <div class="card-body d-grid gap-2 d-md-flex justify-content-md-between">
              <form class="d-inline" action="/readingBliss/<%=foundBook.id%>?_method=DELETE" method="POST">
                <button class="btn btn-link"><%=bookJson.details.actionButtons.deleteLabel%></button>
              </form>
              <div>
                <a href="/readingBliss/<%= foundBook.id %>/edit" class="card-link btn btn-primary btn-custom-outline-primary py-2 px-4"><%=bookJson.details.actionButtons.editLabel%></a>
                <a href="https://www.google.com/search?q=<%=foundBook.title%>" target="_blank" class="card-link btn btn-primary btn-custom-fill-primary py-2 px-4"><%=bookJson.details.actionButtons.toReadBook%></a>
              </div>
            </div>
        </div>
    </div>
    <div class="col-6">
      <h2>Leave Your review</h2>
      <form action="/readingBliss/<%= foundBook.id %>/reviews" method="POST" class="needs-validation mb-5" novalidate>
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Reviews</label>
          <textarea class="form-control" name="review[body]" id="body" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-custom-fill-primary py-2 px-4" value="Submit">Post</button>
      </form>
      <div class="border-bottom border-3"></div>
      <div class="mt-5">
        <% for(let review of foundBook.reviews) { %>
          <div class="mb-3 card">
            <div class="card-body p-3">
                <h4 class="card-title d-flex flex-row justify-content-between">Rating: <%=review.rating%>
                  <form action="/readingBliss/<%=foundBook.id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                    <button class="default-css-unset"> <i class="fa fa-trash fa-2x icon-button-custom-fill-primary"></i></button>
                  </form>
                </h4>
                <p class="card-text"><%=review.body%></p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
</div>
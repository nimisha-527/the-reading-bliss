<% layout('./layout/imageBoilerPlate', {bookJson, icons, isNavTransparent, getNavLinkColor, getNavToggleColor}) %>

  <div class="px-md-5 py-5 user-login-register user-login-register">
    <div class="user-login-register_user container image-animation-pulse">
      <div class="form-box container">
        <h1 class="text-style fade-in-load">
          <%=loginStatic.title%>
        </h1>
        <form action="/readingBliss/login" method="POST" class="needs-validation" novalidate>
          <div class="input-group">
            <input type="text" name="username" required>
            <label for="username">
              <%=loginStatic.enterUsernameLabel%>
            </label>
          </div>
          <div class="input-group mb-5">
            <input name="password" type="password" required>
            <label for="password">
              <%=loginStatic.passwordLabel%>
            </label>
          </div>
          <button type="submit" class="btn btn-primary btn-custom-fill-primary" value="Submit">
            <%=loginStatic.actionButtons.loginButton%>
          </button>
          <p class="pt-3 text-center">
            <%=loginStatic.signupText %> <a class="d-inline btn btn-link" href="/readingBliss/register">
                <%=loginStatic.actionButtons.signupButton%>
              </a>
          </p>
        </form>
      </div>
    </div>
  </div>